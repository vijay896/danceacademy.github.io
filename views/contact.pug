extends base.pug

block scripts 
    script(src="../static/script.js")

block style 
    style
        include ../static/style.css
        include ../static/contactStyle.css

block content
    div.bgImage

    div.formContainer
        h1 Contact Us
        form(action="/contact", method="post" class="myForm")
            input(type="text", class="myInput", name="name", placeholder="Enter Your Name Here")
            input(type="email", class="myInput", name="email", placeholder="Enter Your Email Here")
            input(type="number", class="myInput", name="mobile", placeholder="Enter Your Mobile Number Here")
            input(type="text", class="myInput", name="msg", placeholder="Enter Your Message Here")
            button.btn 
                | Submit